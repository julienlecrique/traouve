{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}


    <div class="container">
        <h2>Les derniers objets trouvés dans {{ category.label }}</h2>

        <section class="row">
            {% for traobject in traobjects if traobject.state.label == "trouve" %}

                {% include 'traobject/card.html.twig' with {'traobject' : traobject} only %}

            {% endfor %}

        </section>
    </div>

    <div class="container">
        <h2>Les derniers objets perdus dans {{ category.label }}</h2>
        <section class="row">
            {% for traobject in traobjects if traobject.state.label == "perdu" %}

                {% include 'traobject/card.html.twig' with {'traobject' : traobject} only %}

            {% endfor %}

        </section>
    </div>

{% endblock %}
